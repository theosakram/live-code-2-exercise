<%- include('partials/head.ejs')  %>

<body>
  <h1>HEROES LIST</h1>
  <a href="/heroes/add">Add Heroes</a>
  <table>
    <tr>
      <th>id</th>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Job</th>
      <th>Role</th>
      <th>Action 1</th>
      <th>Action 2</th>
    </tr>
    <% data.map(x => { %>
    <tr>
      <td> <%= x.id%> </td>
      <td><%= x.first_name%></td>
      <td><%= x.last_name%></td>
      <td><%= x.job%></td>
      <td><%= x.role%></td>
      <td><a href="/heroes/delete/<%= x.id%>">Delete</a></td>
      <td><a href="/heroes/edit/<%= x.id%>">Edit</a></td>
    </tr>
    <% }) %>
  </table>
</body>

